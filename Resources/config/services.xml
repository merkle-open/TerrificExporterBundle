<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="assetic.asset_manager.class">Terrific\ExporterBundle\Factory\LazyAssetManager</parameter>
        <parameter key="terrifc.exporter.build_options.class">Terrific\ExporterBundle\Service\BuildOptions</parameter>
        <parameter key="terrific.exporter.pathresolver.class">Terrific\ExporterBundle\Service\PathResolver</parameter>
        <parameter key="terrific.exporter.logger.class">Terrific\ExporterBundle\Service\ExportLogger</parameter>

    </parameters>


    <services>
        <service id="assetic.asset_manager" class="%assetic.asset_manager.class%">
            <argument type="service" id="assetic.asset_factory"/>
            <argument type="collection"></argument>

            <property type="service" id="kernel" name="service"/>
        </service>

        <service id="terrific.exporter.build_options" class="%terrifc.exporter.build_options.class%"/>

        <service id="terrific.exporter.filter.html" class="Terrific\ExporterBundle\Filter\ExportPathHTMLFilter">
            <argument>%kernel.root_dir%/../</argument>
        </service>

        <service id="terrific.exporter.pathresolver" class="%terrific.exporter.pathresolver.class%">
            <call method="setContainer">
                <argument type="service" id="kernel"/>
            </call>
            <call method="setLogger">
                <argument type="service" id="logger" on-invalid="ignore"/>
            </call>
        </service>

        <service id="terrific.exporter.logger" class="%terrific.exporter.logger.class%">
            <call method="setLogger">
                <argument type="service" id="logger"/>
            </call>
        </service>
    </services>
</container>
