<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="assetic.asset_manager.class">Terrific\ExporterBundle\Factory\LazyAssetManager</parameter>
        <parameter key="terrifc.exporter.build_options.class">Terrific\ExporterBundle\Service\BuildOptions</parameter>
    </parameters>


    <services>
        <service id="assetic.asset_manager" class="%assetic.asset_manager.class%">
            <argument type="service" id="assetic.asset_factory"/>
            <argument type="collection"></argument>

            <property type="service" id="kernel" name="service" />
        </service>

        <service id="terrific.exporter.build_options" class="%terrifc.exporter.build_options.class%"/>

        <service id="terrific.exporter.filter.html" class="Terrific\ExporterBundle\Filter\ExportPathHTMLFilter">
            <argument>%kernel.root_dir%/../</argument>
        </service>
    </services>
</container>
